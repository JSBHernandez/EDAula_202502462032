@model EDAula_202502462032.Models.Passenger

@{
    ViewData["Title"] = "Eliminar Pasajero";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Eliminar Pasajero</h1>
    <p>¿Estás seguro de que deseas eliminar este pasajero?</p>
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

        <dt class="col-sm-3">Identificación</dt>
        <dd class="col-sm-9">@Model.Identification</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>