@model EDAula_202502462032.Models.Route

@{
    ViewData["Title"] = "Crear Nueva Ruta";
}

<div class="container mt-4">
    <h1 class="mb-4">Crear Nueva Ruta</h1>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="Origin" class="form-label">Origen</label>
            <input type="text" class="form-control" id="Origin" name="Origin" required />
        </div>
        <div class="mb-3">
            <label for="Destination" class="form-label">Destino</label>
            <input type="text" class="form-control" id="Destination" name="Destination" required />
        </div>
        <div class="mb-3">
            <label for="Distance" class="form-label">Distancia (km)</label>
            <input type="number" class="form-control" id="Distance" name="Distance" required />
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>