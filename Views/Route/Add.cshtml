@model EDAula_202502462032.Models.Route

<div class="container mt-5">
    <h1 class="text-center">Agregar Nueva Ruta</h1>
    <form asp-action="Add" method="post">
        <div class="form-group mb-3">
            <label for="Train" class="form-label">Tren</label>
            <select asp-for="Train" class="form-control" asp-items="ViewBag.Trains" required>
                <option value="">Seleccione un tren</option>
            </select>
            <span asp-validation-for="Train" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Origin" class="form-label">Estación de Origen</label>
            <select asp-for="Origin" class="form-control" asp-items="ViewBag.Stations" required>
                <option value="">Seleccione una estación de origen</option>
            </select>
            <span asp-validation-for="Origin" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Destination" class="form-label">Estación de Destino</label>
            <select asp-for="Destination" class="form-control" asp-items="ViewBag.Stations" required>
                <option value="">Seleccione una estación de destino</option>
            </select>
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Schedule" class="form-label">Horario Programado</label>
            <input type="datetime-local" asp-for="Schedule" class="form-control" />
            <span asp-validation-for="Schedule" class="text-danger"></span>
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" asp-for="IsPublished" class="form-check-input" />
            <label for="IsPublished" class="form-check-label">¿Publicar esta ruta?</label>
        </div>
        <button type="submit" class="btn btn-success w-100">Agregar Ruta</button>
    </form>
    <a href="/Route" class="btn btn-primary w-100 mt-3">Volver a la Lista de Rutas</a>
</div>