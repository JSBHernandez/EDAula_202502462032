@model EDAula_202502462032.Models.TicketDemoViewModel

<div class="container mt-5">
    <h1 class="text-center">Compra de Boleto</h1>
    <form asp-action="TicketDemo" method="post">
        <div class="form-group mb-3">
            <label for="TrainId">Tren</label>
            <input type="text" asp-for="TrainId" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="DepartureDateTime">Salida</label>
            <input type="text" asp-for="DepartureDateTime" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="ArrivalDateTime">Llegada</label>
            <input type="text" asp-for="ArrivalDateTime" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="TicketPrice">Precio</label>
            <input type="text" asp-for="TicketPrice" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="FirstName">Nombre</label>
            <input type="text" asp-for="FirstName" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="LastName">Apellido</label>
            <input type="text" asp-for="LastName" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="PhoneNumber">Teléfono</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="EmergencyContactName">Contacto de Emergencia</label>
            <input type="text" asp-for="EmergencyContactName" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="EmergencyContactPhone">Teléfono de Emergencia</label>
            <input type="text" asp-for="EmergencyContactPhone" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success w-100">Confirmar</button>
    </form>
</div>