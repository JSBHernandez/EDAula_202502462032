<h1>Agregar Tren</h1>
<form asp-action="AddTrain" method="post">
    <label for="Name">Nombre:</label>
    <input type="text" id="Name" name="Name" required />
    <label for="Identifier">Identificador:</label>
    <input type="text" id="Identifier" name="Identifier" required />
    <label for="Type">Tipo:</label>
    <select id="Type" name="Type">
        <option value="Mercedes-Benz">Mercedes-Benz</option>
        <option value="Arnold">Arnold</option>
    </select>
    <label for="PassengerCapacity">Capacidad de Pasajeros:</label>
    <input type="number" id="PassengerCapacity" name="PassengerCapacity" required />
    <label for="Mileage">Kilometraje:</label>
    <input type="number" id="Mileage" name="Mileage" step="0.1" required />
    <button type="submit">Agregar Tren</button>
</form>