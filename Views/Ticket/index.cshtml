@model IEnumerable<EDAula_202502462032.Models.Ticket>

@{
    ViewData["Title"] = "Lista de Tickets";
}

<div class="container mt-4">
    <h1 class="mb-4">Lista de Tickets</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fecha de Compra</th>
                <th>Fecha de Salida</th>
                <th>Fecha de Llegada</th>
                <th>Categor√≠a de Asiento</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Id</td>
                    <td>@ticket.PurchaseDate</td>
                    <td>@ticket.DepartureDate</td>
                    <td>@ticket.ArrivalDate</td>
                    <td>@ticket.SeatCategory</td>
                    <td>@ticket.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>