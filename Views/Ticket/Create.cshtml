@model EDAula_202502462032.Models.Ticket

<div class="container mt-5">
    <h1 class="text-center">Venta de Boletos</h1>
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label for="FirstName">Nombres</label>
            <input type="text" asp-for="FirstName" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="LastName">Apellidos</label>
            <input type="text" asp-for="LastName" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="PassengerCategory">Categoría del Pasajero</label>
            <select asp-for="PassengerCategory" class="form-control">
                <option value="Premium">Premium</option>
                <option value="Ejecutivo">Ejecutivo</option>
                <option value="Estándar">Estándar</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success w-100">Comprar Boleto</button>
    </form>
</div>