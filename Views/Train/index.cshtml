@model IEnumerable<EDAula_202502462032.Models.Train>

@{
    ViewData["Title"] = "Lista de Trenes";
}

<div class="container mt-4">
    <h1 class="mb-4">Lista de Trenes</h1>
    <a class="btn btn-primary mb-3" asp-action="Create">Agregar Tren</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Capacidad de Pasajeros</th>
                <th>Capacidad de Equipaje</th>
                <th>Tipo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var train in Model)
            {
                <tr>
                    <td>@train.Id</td>
                    <td>@train.Name</td>
                    <td>@train.PassengerCapacity</td>
                    <td>@train.LuggageCapacity</td>
                    <td>@train.Type</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@train.Id">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@train.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>