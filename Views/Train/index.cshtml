@model IEnumerable<EDAula_202502462032.Models.Train>

@{
    ViewData["Title"] = "Gestionar Trenes";
}

<div class="container mt-5">
    <div class="row">
        <div class="col text-center">
            <h1 class="display-4">Gestionar Trenes</h1>
            <p class="lead">Aquí puedes ver, editar o eliminar los trenes existentes.</p>
            <hr class="my-4">
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Identificador</th>
                        <th>Tipo</th>
                        <th>Capacidad</th>
                        <th>Kilometraje</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var train in Model)
                    {
                        <tr>
                            <td>@train.Name</td>
                            <td>@train.Identifier</td>
                            <td>@train.Type</td>
                            <td>@train.PassengerCapacity</td>
                            <td>@train.Mileage</td>
                            <td>
                                <a href="/Train/Edit/@train.Id" class="btn btn-warning btn-sm">Editar</a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@train.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col text-center">
            <a href="/Train/TrainMenu" class="btn btn-primary">Volver al Menú</a> <!-- Botón azul al final -->
        </div>
    </div>
</div>