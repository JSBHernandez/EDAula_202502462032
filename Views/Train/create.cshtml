@model EDAula_202502462032.Models.Train

@{
    ViewData["Title"] = "Agregar Tren";
}

<div class="container mt-4">
    <h1 class="mb-4">Agregar Tren</h1>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="Name" name="Name" required />
        </div>
        <div class="mb-3">
            <label for="PassengerCapacity" class="form-label">Capacidad de Pasajeros</label>
            <input type="number" class="form-control" id="PassengerCapacity" name="PassengerCapacity" required />
        </div>
        <div class="mb-3">
            <label for="LuggageCapacity" class="form-label">Capacidad de Equipaje</label>
            <input type="number" class="form-control" id="LuggageCapacity" name="LuggageCapacity" required />
        </div>
        <div class="mb-3">
            <label for="Type" class="form-label">Tipo</label>
            <input type="text" class="form-control" id="Type" name="Type" required />
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>