@model EDAula_202502462032.Models.Train

@{
    ViewData["Title"] = "Agregar un Tren";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center">Agregar un Tren</h1>
            <form asp-action="Add" method="post">
                <div class="form-group mb-3">
                    <label for="Name" class="form-label">Nombre del Tren</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Identifier" class="form-label">Identificador</label>
                    <input type="text" id="Identifier" name="Identifier" class="form-control" value="@Model.Identifier" required />
                    <span asp-validation-for="Identifier" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Type" class="form-label">Tipo</label>
                    <select id="Type" name="Type" class="form-control">
                        <option value="Mercedes-Benz">Mercedes-Benz</option>
                        <option value="Arnold">Arnold</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="PassengerCapacity" class="form-label">Capacidad de Pasajeros</label>
                    <input type="number" id="PassengerCapacity" name="PassengerCapacity" class="form-control" value="@Model.PassengerCapacity" required />
                    <span asp-validation-for="PassengerCapacity" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="LuggageCapacity" class="form-label">Capacidad de Equipaje</label>
                    <input type="number" id="LuggageCapacity" name="LuggageCapacity" class="form-control" value="@Model.LuggageCapacity" required />
                    <span asp-validation-for="LuggageCapacity" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Mileage" class="form-label">Kilometraje</label>
                    <input type="number" id="Mileage" name="Mileage" class="form-control" value="@Model.Mileage" required />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success w-100">Agregar Tren</button>
            </form>
            <a href="/Train/TrainMenu" class="btn btn-primary w-100 mt-3">Volver al Menú</a> <!-- Botón para volver al menú -->
        </div>
    </div>
</div>